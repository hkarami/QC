@model LaboratoryQualityControl.Domain.User

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
