@model LaboratoryQualityControl.Models.SpectrophotometerMaintenance

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>SpectrophotometerMaintenance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeviceCode" class="control-label"></label>
                <select asp-for="DeviceCode" class ="form-control" asp-items="ViewBag.DeviceCode"></select>
            </div>
            <div class="form-group">
                <label asp-for="DoTime" class="control-label"></label>
                <input asp-for="DoTime" class="form-control" />
