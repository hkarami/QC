            </div>
            <div class="form-group">
                <label asp-for="UpdateRecordTime" class="control-label"></label>
                <input asp-for="UpdateRecordTime" class="form-control" />
                <span asp-validation-for="UpdateRecordTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecordTime" class="control-label"></label>
                <input asp-for="RecordTime" class="form-control" />
                <span asp-validation-for="RecordTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
