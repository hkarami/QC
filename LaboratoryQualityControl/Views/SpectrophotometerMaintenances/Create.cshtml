            </div>
            <div class="form-group">
                <label asp-for="UserCodeFunctor" class="control-label"></label>
                <select asp-for="UserCodeFunctor" class ="form-control" asp-items="ViewBag.UserCodeFunctor"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="SetDeviceZero" /> @Html.DisplayNameFor(model => model.SetDeviceZero)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="LightBulbClean" /> @Html.DisplayNameFor(model => model.LightBulbClean)
