@model LaboratoryQualityControl.Domain.LogBookDevice

@{
    ViewData["Title"] = "ویرایش";
}

    <h2>@ViewData["Title"]</h2>

<h4>LogBook تجهیزات</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLogBook" />
            <input type="hidden" asp-for="RecordTime" />
            @Html.Partial("_PartialCreateEdit", Model)
            <hr
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">برگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
