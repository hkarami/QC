@model LaboratoryQualityControl.Models.LogBookDevice

@{
    ViewData["Title"] = "حذف LogBook";
}

    <h2> @ViewData["Title"]</h2>

<h3>آیا مطمئن هستید که می خواهید این را حذف کنید؟</h3>
<div>
    <h4>@Html.DisplayFor(model=> model.Device.DeviceName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DoTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DoTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DeviceStatusID)
        </dt>
