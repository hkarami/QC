@model LaboratoryQualityControl.Models.Device

@{
    ViewData["Title"] = "ویرایش شناسنامه تجهیزات";
}

    <h2>@ViewData["Title"]</h2>

@*<h4>Device</h4>*@
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeviceCode" />
            <input type="hidden" asp-for="RecordTime"/>
            @Html.Partial("_PartialCreateEdit", Model)
            <hr />
            <div class="col-md-12">
                <input type="submit" value="ویرایش" class="fas fa-bell" />
            </div>
        </form>
    </div>
    
 
</div>

<div>
    <a asp-action="Index">برگشت تو لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
